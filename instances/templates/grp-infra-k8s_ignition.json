{
	"ignition": {
	  "version": "3.2.0",
	  "config": {
		"merge": [
		  {
			"source": "{{ignition_source}}/{{item.ignition_file}}"
		  }
		]
	  }
	},
	"storage": {
	  "files": [
		{
		  "path": "/etc/hostname",
		  "mode": 420,
		  "overwrite": true,
		  "contents": {
			"source": "data:,{{iten.name}}"
		  }
		}
	  ]
	}
  }
  