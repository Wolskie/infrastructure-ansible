{
	"ignition": {
		"config": {
			"merge": [
				{
					"source": "{{ignition_source}}/{{item.ignition_file}}"
				}
			]
		},
		"storage": {
			"files": [
				{
					"path": "/etc/hostname",
					"mode": 420,
					"overwrite": true,
					"contents": {
						"source": "data:,{{item.name}}"
					}
				}
			]
		},
		"version": "3.2.0"
	}
}